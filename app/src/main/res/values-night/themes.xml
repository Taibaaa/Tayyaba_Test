<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrinksRecipieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/mainColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainColor</item>
        <item name="colorSecondaryVariant">@color/mainColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>


    <!--Radio buttons style-->
    <style name="MyRadioButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">#86000000</item>
        <item name="colorControlActivated">@color/mainColor</item>
        <item name="fontFamily">@font/helvetica_regular</item>
    </style>

    <!--bottom sheet layout style-->
    <style name="Round_corners_Images_style" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">@color/mainColor</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:background">@color/transparent</item>

    </style>
</resources>